{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@fir/penpot-parser": ["./packages/penpot-parser/src"],
      "@fir/spatial-engine": ["./packages/spatial-engine/src"],
      "@fir/transition-system": ["./packages/transition-system/src"],
      "@fir/react-generator": ["./packages/react-generator/src"],
      "@fir/spatial-runtime": ["./packages/spatial-runtime/src"],
      "@fir/ui": ["./packages/ui/src"],
      "@fir/cli": ["./packages/cli/src"]
    }
  },
  "include": ["packages/**/*", "apps/**/*", "tools/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}